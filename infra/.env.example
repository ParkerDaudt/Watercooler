# Domain for Caddy TLS (use localhost for local, or your.domain.com for production)
DOMAIN=localhost

# PostgreSQL
POSTGRES_USER=watercooler
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=watercooler
DATABASE_URL=postgresql://watercooler:changeme_strong_password@postgres:5432/watercooler

# Session secret (min 32 chars - generate with: openssl rand -hex 32)
SESSION_SECRET=changeme_generate_a_random_secret_at_least_32_chars

# Uploads
UPLOAD_MAX_MB=10

# CORS origin — must match how users access the site
# For localhost: http://localhost
# For a real domain: https://your.domain.com
CORS_ORIGIN=http://localhost

# Next.js (internal Docker networking — don't change)
NEXT_PUBLIC_API_URL=http://api:3001
